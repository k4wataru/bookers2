<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'layouts/error', model: @user %>
      <%= form_with model: @user, html: {class: "form-group", role: "form"} do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
        </div>
        <div>
          <label for="inputImage">Image</label>
        </div>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介", class: "form-control"%>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary"  %>
      <% end %>
    </div>
  </div>
</div>