      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, class: "form-group", role: "form" do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", id: "book_title" %>
        <%= f.label :Opinion %>
