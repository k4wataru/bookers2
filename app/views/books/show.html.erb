<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'layouts/sidebar', user: @user %>
    <%= render 'layouts/sidebarbook', book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td class="d-flex flex-column align-items-center">
              <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(80,80) %><br>
                <%= @user.name %>
              <% end %>
           </td>
            <td><%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success edit_book_123013" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に削除しますか？" },class:"btn btn-sm btn-danger destroy_book_123013" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
 　</div>
</div>